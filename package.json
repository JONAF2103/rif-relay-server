{
  "name": "rif-relay-server",
  "version": "0.0.2-alpha.1",
  "description": "This project contains all the server code for the rif relay system.",
  "main": "dist/index.js",
  "scripts": {
    "build": "scripts/build",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "npm run run-test './test/unit/**/*.test.ts' './test/unit/**/*.spec.ts'",
    "test:integration": "npm run run-test './test/integration/**/*.test.ts' ./test/integration/**/*.spec.ts'",
    "run-test": "npm run build && mocha --require ts-node/register --require source-map-support/register --full-trace --colors --exit './test/config.ts'",
    "tdd": "npm run build && npx mocha --require ts-node/register --require source-map-support/register --full-trace --colors --exit './test/config.ts' './test/**/*.ts' --watch --watch-extension 'ts' --watch-files './**/*.ts'",
    "lint": "eslint . --ext .ts",
    "prepare": "scripts/prepare",
    "lint:fix": "eslint . --ext .ts --fix",
    "prettier:fix": "npx prettier --write --ignore-unknown .",
    "prettier": "npx prettier --check .",
    "start": "scripts/start",
    "register": "scripts/register",
    "debug": "ts-node src/commands/Start.ts --config server-config.json"
  },
  "author": "Relaying Services Team",
  "license": "MIT",
  "dependencies": {
    "@rsksmart/rif-relay-client": "https://github.com/rsksmart/rif-relay-client#PP-288/rif-rbtc",
    "@rsksmart/rif-relay-common": "https://github.com/rsksmart/rif-relay-common#PP-288/rif-rbtc",
    "@rsksmart/rif-relay-contracts": "https://github.com/rsksmart/rif-relay-contracts#PP-288/rif-rbtc",
    "@truffle/abi-utils": "~0.2.3",
    "@truffle/hdwallet-provider": "1.6.0",
    "@trufflesuite/web3-provider-engine": "15.0.13-1",
    "async-mutex": "~0.2.4",
    "bignumber.js": "^9.0.2",
    "bn.js": "5.1.2",
    "body-parser": "~1.19.0",
    "cors": "2.8.5",
    "dotenv": "^16.0.0",
    "ethereumjs-tx": "~2.1.2",
    "ethereumjs-util": "~6.2.1",
    "ethereumjs-wallet": "~1.0.1",
    "ethval": "~2.1.1",
    "express": "~4.17.1",
    "jsonrpc-lite": "~2.2.0",
    "loglevel": "~1.7.0",
    "minimist": "~1.2.5",
    "nedb-async": "~0.1.3",
    "ow": "~0.17.0",
    "patch-package": "~6.4.6",
    "source-map-support": "^0.5.21",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.3.0",
    "truffle-hdwallet-provider": "~1.0.17",
    "web3": "1.2.6",
    "web3-core": "1.2.6",
    "web3-core-helpers": "1.2.6",
    "web3-eth-contract": "1.2.6",
    "web3-provider-engine": "16.0.1",
    "web3-utils": "1.2.6",
    "yargs": "~17.0.1"
  },
  "devDependencies": {
    "@openeth/truffle-typings": "^0.0.6",
    "@openzeppelin/test-helpers": "0.5.10",
    "@types/chai": "^4.3.1",
    "@types/chai-as-promised": "^7.1.5",
    "@types/cors": "~2.8.7",
    "@types/express": "~4.17.8",
    "@types/minimist": "~1.2.0",
    "@types/mocha": "^9.1.1",
    "@types/nedb": "~1.8.11",
    "@types/node": "~13.13.4",
    "@types/sinon": "^10.0.13",
    "@types/sinon-chai": "^3.2.8",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/web3": "1.2.2",
    "@types/web3-provider-engine": "~14.0.0",
    "@types/yargs": "~17.0.2",
    "@typescript-eslint/eslint-plugin": "~4.28.3",
    "@typescript-eslint/parser": "~4.28.3",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "eslint": "~7.30.0",
    "husky": "~6.0.0",
    "mocha": "^10.0.0",
    "prettier": "^2.7.1",
    "sinon": "^14.0.0",
    "sinon-chai": "^3.7.0",
    "ts-node": "8.6.2",
    "ts-sinon": "^2.0.2",
    "typescript": "~4.3.5"
  }
}
